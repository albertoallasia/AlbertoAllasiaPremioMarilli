@page
@using GestioneTerreniAgricoli.Areas.Identity.Pages.Account
@model LogoutModel
@{
    ViewData["Title"] = "Disconnettiti";
}

<header>
    <h1>@ViewData["Title"]</h1>
    @{
        if (User.Identity?.IsAuthenticated ?? false)
        {
            <form class="form-inline" asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="@Url.Page("/", new { area = "" })" method="post">
                <button type="submit" class="nav-link btn btn-link text-dark">Clicca per Disconnetterti</button>
            </form>
        }
        else
        {
            <p>Ti sei disconnesso correttamente!</p>
        }
    }
</header>
