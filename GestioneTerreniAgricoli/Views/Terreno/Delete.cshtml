@model GestioneTerreniAgricoli.Models.Terreno

@{
    ViewData["Title"] = "Elimina Terreno";
}

<h1>Elimina Terreno</h1>

<!-- Mostra un avviso se ci sono coltivazioni associate -->
@if (ViewData["AlertMessage"] != null)
{
    <div class="alert alert-warning">
        @ViewData["AlertMessage"]
    </div>
}

<h3>Sei sicuro di voler eliminare questo terreno?</h3>
<div>
    <h4>Terreno</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">@Html.DisplayNameFor(model => model.NomeTerreno)</dt>
        <dd class="col-sm-10">@Html.DisplayFor(model => model.NomeTerreno)</dd>

        <dt class="col-sm-2">@Html.DisplayNameFor(model => model.TipologiaTerreno)</dt>
        <dd class="col-sm-10">@Html.DisplayFor(model => model.TipologiaTerreno)</dd>

        <dt class="col-sm-2">@Html.DisplayNameFor(model => model.Metratura)</dt>
        <dd class="col-sm-10">@Html.DisplayFor(model => model.Metratura)</dd>

        <dt class="col-sm-2">@Html.DisplayNameFor(model => model.Localita.NomeComune)</dt>
        <dd class="col-sm-10">@Html.DisplayFor(model => model.Localita.NomeComune)</dd>
    </dl>

    <form asp-action="Delete" method="post">
        <input type="hidden" asp-for="IdTerreno" />
        <input type="submit" value="Sì, elimina" class="btn btn-danger" />
        <a asp-action="Index" class="btn btn-secondary">Annulla</a>
    </form>
</div>