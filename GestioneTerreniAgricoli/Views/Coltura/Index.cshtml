@model IEnumerable<GestioneTerreniAgricoli.Models.Coltura>

@{
    ViewData["Title"] = "Colture";
}

<div class="page-title">
    <h1>Colture</h1>
    <p>
        <a asp-action="Create">Aggiungi Coltura</a>
    </p>
</div>

<form asp-controller="Coltura" asp-action="Index">
    <p>
        <select name="searchAttribute" id="searchAttribute">
            <option value="">Tutti</option>
            <option value="NomeColtura">Nome Coltura</option>
            <option value="Descrizione">Descrizione</option>
        </select>
        <input type="text" name="searchString" id="searchString" style="display:none;" />
        <input type="submit" value="Filtra" id="submitButton" />
    </p>
</form>

<script>
    document.getElementById('searchAttribute').addEventListener('change', function () {
        var searchString = document.getElementById('searchString');

        if (this.value === '') {
            searchString.style.display = 'none';
        } else {
            searchString.style.display = 'inline';
        }
    });
</script>

<div class="place-columns">
    @foreach (var item in Model)
    {
        @Html.Partial("_ColturaCard", item)
    }
</div>


<style>
    
    .place-columns {
        display: grid;
        grid-template-columns: repeat(2, 1fr);
        gap: 20px; /* Spazio tra le schede */
    }


</style> 