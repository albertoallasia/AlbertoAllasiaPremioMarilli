@model GestioneTerreniAgricoli.Models.Coltura

@{
    ViewData["Title"] = "Elimina Coltura";
}

<h1>Elimina Coltura</h1>

<!-- Mostra un avviso se ci sono coltivazioni associate -->
@if (ViewData["AlertMessage"] != null)
{
    <div class="alert alert-warning">
        @ViewData["AlertMessage"]
    </div>
}

<h3>Sei sicuro di voler eliminare questa coltura?</h3>
<div>
    <h4>Coltura</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">@Html.DisplayNameFor(model => model.NomeColtura)</dt>
        <dd class="col-sm-10">@Html.DisplayFor(model => model.NomeColtura)</dd>

        <dt class="col-sm-2">@Html.DisplayNameFor(model => model.Descrizione)</dt>
        <dd class="col-sm-10">@Html.DisplayFor(model => model.Descrizione)</dd>
    </dl>

    <form asp-action="Delete" method="post">
        <input type="hidden" asp-for="IdColtura" />
        <input type="submit" value="Sì, elimina" class="btn btn-danger" />
        <a asp-action="Index" class="btn btn-secondary">Annulla</a>
    </form>
</div>