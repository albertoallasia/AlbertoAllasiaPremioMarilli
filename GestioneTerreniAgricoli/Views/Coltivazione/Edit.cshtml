@model GestioneTerreniAgricoli.Models.Coltivazione

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>

<h4>Coltivazione</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="IdColtivazione" />
            <div class="form-group">
                <label asp-for="NomeColtivazione" class="control-label"></label>
                <input asp-for="NomeColtivazione" class="form-control" />
                <span asp-validation-for="NomeColtivazione" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="QuantitaProdotta" class="control-label"></label>
                <input asp-for="QuantitaProdotta" type="number" class="form-control" />
                <span asp-validation-for="QuantitaProdotta" class="text-danger"></span>
            </div>
            <div class="form-group form-check">
                <label class="form-check-label">
                    <input class="form-check-input" asp-for="ColtivazioneTerminata" /> @Html.DisplayNameFor(model => model.ColtivazioneTerminata)
                </label>
            </div>
            <div class="form-group">
                <label asp-for="ColturaId" class="control-label"></label>
                <select asp-for="ColturaId" class="form-control" asp-items="ViewBag.ColturaId"></select>
                <span asp-validation-for="ColturaId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="TerrenoId" class="control-label"></label>
                <select asp-for="TerrenoId" class="form-control" asp-items="ViewBag.TerrenoId"></select>
                <span asp-validation-for="TerrenoId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
