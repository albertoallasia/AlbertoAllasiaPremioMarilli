@model GestioneTerreniAgricoli.Models.Coltivazione

@{
    ViewData["Title"] = "Elimina Coltivazione";
}

<h1>Elimina Coltivazione</h1>

<!-- Mostra avvisi se ci sono lavori associati -->
@if (ViewData["AlertMessage"] != null)
{
    <div class="alert alert-warning">
        @ViewData["AlertMessage"]
    </div>
}

<h3>Sei sicuro di voler eliminare questa coltivazione?</h3>
<div>
    <h4>Coltivazione</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">@Html.DisplayNameFor(model => model.NomeColtivazione)</dt>
        <dd class="col-sm-10">@Html.DisplayFor(model => model.NomeColtivazione)</dd>

        <dt class="col-sm-2">@Html.DisplayNameFor(model => model.QuantitaProdotta)</dt>
        <dd class="col-sm-10">@Html.DisplayFor(model => model.QuantitaProdotta)</dd>

        <dt class="col-sm-2">@Html.DisplayNameFor(model => model.ColtivazioneTerminata)</dt>
        <dd class="col-sm-10">@Html.DisplayFor(model => model.ColtivazioneTerminata)</dd>

        <dt class="col-sm-2">@Html.DisplayNameFor(model => model.Coltura.Descrizione)</dt>
        <dd class="col-sm-10">@Html.DisplayFor(model => model.Coltura.Descrizione)</dd>

        <dt class="col-sm-2">@Html.DisplayNameFor(model => model.Terreno.NomeTerreno)</dt>
        <dd class="col-sm-10">@Html.DisplayFor(model => model.Terreno.NomeTerreno)</dd>
    </dl>

    <form asp-action="Delete" method="post">
        <input type="hidden" asp-for="IdColtivazione" />
        <input type="submit" value="Sì, elimina" class="btn btn-danger" />
        <a asp-action="Index" class="btn btn-secondary">Annulla</a>
    </form>
</div>